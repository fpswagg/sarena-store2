# ============================================
# BASE DE DONNÉES - Docker PostgreSQL (Local)
# ============================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/sarena_store?schema=public"

# ============================================
# SUPABASE - Configuration
# ============================================
# Créez un projet sur https://supabase.com
# Récupérez ces valeurs dans Settings > API

# URL de votre projet Supabase
NEXT_PUBLIC_SUPABASE_URL="https://votre-projet.supabase.co"

# Clé publique (anon key) - Safe pour le client
NEXT_PUBLIC_SUPABASE_ANON_KEY="votre-anon-key-ici"

# Clé secrète (service role key) - UNIQUEMENT pour le serveur, JAMAIS exposée au client
SUPABASE_SERVICE_ROLE_KEY="votre-service-role-key-ici"

# ============================================
# WHATSAPP - Numéro Admin par défaut
# ============================================
NEXT_PUBLIC_WHATSAPP_NUMBER="+221770000000"

# ============================================
# SITE URL
# ============================================
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# ============================================
# NODE ENV
# ============================================
NODE_ENV="development"

NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/sarenastore
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/sarenastore
NEXT_PUBLIC_TIKTOK_URL=https://tiktok.com/@sarenastore